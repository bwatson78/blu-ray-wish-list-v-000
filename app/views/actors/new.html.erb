<div class="container">
  <% if !!@movie %>
    <h1>Create A New Actor/Actress for <%= @movie.title %>: </h1>
  <% else %>
    <h1>Create A New Actor/Actress:</h1>
  <% end %>

  <%= form_for @actor, url: movie_actors_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :imdb_url, "Actor/Actress' IMDB Page URL", class: "control-label" %>
    <%= f.text_field :imdb_url %><br>
    <%= f.submit %>
  <% end %>
</div>
