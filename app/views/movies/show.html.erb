<div class="container">
    <h1><%= @movie.title %></h1><br><br>
    <ul>
      <li>Year Released: <%= @movie.release_year %></li>
      <li><%= link_to "IMDB Information Page", "#{@movie.imdb_url }", target: "_blank" %></li>
    </ul>

    <h3>Film's Actors/Actresses:</h3>
    <ul>
      <% @movie.actors.each do |actor| %>
        <li><%= link_to actor.name, movie_actor_path(movie_id: @movie.id) %></li>
      <% end %>
    </ul>

    <h3>Film's Genre(s):</h3>
    <ul>
      <% @movie.genres.each do |genre| %>
        <li><%= link_to genre.tag, genre_path(genre) %></li>
      <% end %>
    </ul>

</div>
